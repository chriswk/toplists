<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :born, class: "control-label" %>
    <%= date_select f, :born, class: "form-control" %>
    <%= error_tag f, :born %>
  </div>

  <div class="form-group">
    <%= label f, :tmdb_id, class: "control-label" %>
    <%= number_input f, :tmdb_id, class: "form-control" %>
    <%= error_tag f, :tmdb_id %>
  </div>

  <div class="form-group">
    <%= label f, :imdb_id, class: "control-label" %>
    <%= text_input f, :imdb_id, class: "form-control" %>
    <%= error_tag f, :imdb_id %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
